# Simpan versi persis seperti di package.json
save-exact=true

# Gunakan registry resmi NPM
registry=https://registry.npmjs.org/

# Gunakan legacy peer deps saat install biar nggak ERESOLVE, tapi tanpa --force
legacy-peer-deps=false

# Pastikan package-lock.json di-generate (buat CI/CD dan deploy)
package-lock=true

# Lokasi cache (opsional, biar install lebih cepat di local)
cache=.npm-cache

# Maksimalkan jumlah koneksi download
maxsockets=50

# Timeout koneksi 60 detik (biar nggak gampang error jaringan)
fetch-timeout=60000

# Nonaktifkan fund message (sumbangan package) biar nggak spam di terminal
fund=false